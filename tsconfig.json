{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/*"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./node_modules/phaser/types"
  ],
  "types": [
    "Phaser"
  ]
}